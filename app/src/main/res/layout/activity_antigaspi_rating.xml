<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".user_client.home.ReceipyAddcomment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginBottom="20dp"
        android:text="@string/opiioninterestus"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/one"
        android:text="@string/punctuality"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:layout_height="wrap_content"/>
    <RatingBar
        android:layout_toRightOf="@+id/one"
        android:id="@+id/ratingBarpunctuality"
        android:layout_marginLeft="20dp"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="@dimen/five_dp"
        android:isIndicator="false"
        android:max="5"
        android:numStars="5"
        android:progressTint="@color/yellow"
        android:stepSize="1"
        android:transformPivotX="20dp"
        android:transformPivotY="0dp" />
</RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/two"
        android:text="@string/quality"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RatingBar
        android:layout_toRightOf="@+id/two"
        android:id="@+id/ratingBarquality"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="@dimen/five_dp"
        android:isIndicator="false"
        android:max="5"
        android:numStars="5"
        android:progressTint="@color/yellow"
        android:stepSize="1"
        android:transformPivotX="20dp"
        android:transformPivotY="0dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/three"
        android:text="@string/Conformity"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RatingBar
        android:layout_toRightOf="@+id/three"
        android:id="@+id/ratingBarconfirmity"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="@dimen/five_dp"
        android:isIndicator="false"
        android:max="5"
        android:numStars="5"
        android:progressTint="@color/yellow"
        android:stepSize="1"
        android:transformPivotX="20dp"
        android:transformPivotY="0dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray"
        ></View>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="@string/opinionaboutreceipy"/>


    <TextView
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:text="@string/opinioncommentry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/opinion"
        android:textSize="15sp"
        android:gravity="top"
        android:layout_marginTop="15dp"
        android:padding="5dp"
        android:background="@drawable/bg_whiteblack"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>


    <TextView
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_gravity="end"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="15sp"
        android:background="@color/colorPrimary"
        android:text="@string/submit"
        />





</LinearLayout>