<androidx.cardview.widget.CardView
    android:padding="5dp"
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"

    >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/img"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            />




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:text="@string/products"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/five_dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/product"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                android:layout_toRightOf="@+id/name"
                android:layout_marginBottom="@dimen/five_dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="@string/quantity"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:id="@+id/pri"
                android:textSize="15sp"
                android:layout_marginBottom="@dimen/five_dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/quantity"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/pri"
                android:textSize="16sp"
                android:layout_marginBottom="@dimen/five_dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="@string/price"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:id="@+id/quent"
                android:textSize="15sp"
                android:layout_marginBottom="@dimen/five_dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/price"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/quent"
                android:textSize="16sp"
                android:layout_marginBottom="@dimen/five_dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/shippingc"
                android:text="@string/subtotal"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginBottom="@dimen/five_dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/subtotal"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/shippingc"
                android:textSize="16sp"
                android:layout_marginBottom="@dimen/five_dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </RelativeLayout>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tot"
                android:text="@string/collectiondeliverydate"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginBottom="@dimen/five_dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/collectiondate"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tot"
                android:textSize="16sp"
                android:layout_marginBottom="@dimen/five_dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </RelativeLayout>






    </LinearLayout>
</androidx.cardview.widget.CardView>