<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".user_antigaspi.DonationActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#009639">

        <ImageView
            android:id="@+id/backimg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="@dimen/_5sdp"
            android:layout_centerVertical="true"
            android:src="@drawable/back_white" />

        <EditText
            android:id="@+id/textviewtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:hint="@string/searchdonation"
            android:background="@color/colorPrimary"
            android:cursorVisible="false"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="16sp" />



        <ImageView
            android:id="@+id/searchicon"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginEnd="5dp"
            android:layout_toLeftOf="@+id/filtericon"
            android:layout_centerVertical="true"
            android:src="@drawable/search_white"
            android:tint="@color/white" />


        <ImageView
            android:id="@+id/filtericon"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginEnd="5dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/filter"
            android:tint="@color/white" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/filterlyt"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Ofthemonth" />

                <RelativeLayout
                    android:id="@+id/datelyt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_back"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/mTxtProductionDatesSelected"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textColor="@color/black">

                    </TextView>

                    <ImageView
                        android:id="@+id/imv_monthof"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:padding="10dp"
                        android:src="@drawable/calendericon" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/monthly" />

                <RelativeLayout
                    android:id="@+id/datemonthly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_back"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/mTxtMonthly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"

                        android:textColor="@color/black">

                    </TextView>

                    <ImageView
                        android:id="@+id/imv_monthly"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:padding="10dp"
                        android:src="@drawable/calendericon" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_5sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/transactiontype" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_back"
                    android:visibility="visible">

                    <Spinner
                        android:id="@+id/spinnertype"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_back"
                        android:focusable="true"
                        android:focusableInTouchMode="true" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp">

                <TextView
                    android:id="@+id/tv_apply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="Apply"
                    android:textAllCaps="true"
                    android:textColor="@color/white" />

                <!--                <TextView-->
                <!--                    android:id="@+id/tv_reset"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_margin="5dp"-->
                <!--                    android:layout_weight="1"-->
                <!--                    android:background="@color/colorPrimary"-->
                <!--                    android:gravity="center"-->
                <!--                    android:padding="5dp"-->
                <!--                    android:text="RESET"-->
                <!--                    android:textAllCaps="true"-->
                <!--                    android:textColor="@color/white" />-->
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recvewdonation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>